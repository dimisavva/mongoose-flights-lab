<%- include('../partials/html-head.ejs') %> 
<link rel="stylesheet" href="/stylesheets/meals/new.css">
<%- include('../partials/nav.ejs') %> 

<main>
  <h1><%= title %> </h1>
  <p>Please ensure that the meal is not in the dropdown:
    <select>
      <% meals.forEach(meal => { %>
        <option><%= meal.name %> </option>
      <% }) %>
    </select>
  </p>
  <form action="/meals" id="add-meal-form" method="POST">
    <label for="meal-name-input">Meal Name:</label>
    <input type="text" name="name" id="meal-name-input">
    <button type="submit">Add Meal</button>
  </form>
</main>

